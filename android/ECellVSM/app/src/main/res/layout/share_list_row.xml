<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="2000x"
                android:padding="5dp"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/sharelistshares"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs.1000000 "
                android:padding="5dp"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#fff"
                android:id="@+id/sharelistworth"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FLPK"
                    android:id="@+id/sharelistsrtname"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/list_txt_color_black"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.1000"
                        android:id="@+id/sharelistprice"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/list_txt_color_black"
                        />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="+0.34%"
                        android:gravity="right"
                        android:id="@+id/sharelistchange"
                        android:textSize="18sp"
                        android:background="@color/profit"
                        android:textColor="#fff"
                        android:paddingLeft="20dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="3dp"
                        />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flipkart"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:id="@+id/sharelistname"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/list_txt_color_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trade Stocks"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentRight="true"
                    />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"/>
</LinearLayout>




