<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   android:paddingRight="10dp"
    android:paddingLeft="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aasim Khan"
            android:id="@+id/usernamelead"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/list_txt_color_black"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
          >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rs.1000"
                android:id="@+id/listleadbal"
                android:textSize="18sp"
                android:padding="5dp"
                android:textColor="@color/list_txt_color_black"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="+0.34%"
                android:gravity="right"
                android:id="@+id/listleadchange"
                android:textSize="18sp"
                android:background="@drawable/textview_border"
                android:textColor="@color/profit"
                android:padding="5dp"



                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank: 1 "
            android:textSize="12sp"
            android:padding="5dp"
            android:textColor="@color/list_txt_color_black"
            android:id="@+id/listleadrank" />
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"/>

</LinearLayout>