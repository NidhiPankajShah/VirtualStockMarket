<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLPK"
            android:id="@+id/pendlistshtname"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/list_txt_color_black"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shares : 1000"
                android:id="@+id/pendlistshares"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/list_txt_color_black"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Sell Price: Rs.10000"
                android:id="@+id/pendlistprice"
                android:textSize="14sp"
                android:background="#14b33e"
                android:textColor="#fff"
                android:padding="5dp"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flipkart"
            android:padding="5dp"
            android:textSize="12sp"
            android:id="@+id/pendlistname"
            android:textColor="@color/list_txt_color_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Transaction"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"/>
</LinearLayout>